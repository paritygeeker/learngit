<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
    <head>
        <title><{$Think.lang.node_tpl_show_breadcrumb_add}></title>
        <!--引入公共文件bootstrap-->
        <include file="Public:bootstrap" />
    </head>
    <body>
        <ol class="breadcrumb" style="background-color: #E8F2FC;">
            <li><a style="text-decoration: none" href="#"><{$Think.lang.node_tpl_show_breadcrumb_manager}></a></li>
            <li><a style="text-decoration: none" href="#"><{$Think.lang.node_tpl_show_breadcrumb_add}></a></li>
            <li>
                <a class="text-right"style="text-decoration: none" href="javascript:;" onclick="window.location.reload(true);">【刷新本页】</a>
            </li>
            <li>
                <a style="text-decoration: none;" href="<{:getUrl('Node/index',array('page'=>$page_now))}>" target="right">【返回】</a>
            </li>
        </ol>
        <div>
            <form class="form-horizontal" role="form"action="<{:getUrl('Node/add')}>" method="post">
                <div class="form-group">
                    <label class="col-sm-2 control-label">节点名称</label>
                    <div class="col-sm-3">
                        <input class="form-control" type="text" name="name"  placeholder="请输入节点名称"/>
                        <input type="hidden" name="page" value="<{$page_now}>"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">节点描述</label>
                    <div class="col-sm-3">
                        <input class="form-control" type="text" name="title" placeholder="请输入节点描述"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">节点备注</label>
                    <div class="col-sm-3">
                        <input class="form-control" type="text" name="remark" placeholder="请输入节点备注"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">父级节点</label>
                    <div class="col-sm-3">
                        <select class="form-control"  name="pid">
                            <empty name="node_list">
                                <option value="0">添加顶级节点</option>
                                <else/>
                                <volist name='node_list' id='vo' key='index'>
                                    <option value="<{$vo.id}>"><{$vo.title}></option>
                                </volist>
                            </empty>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input class="btn btn-primary" type="submit" value="添加节点">
                    </div>
                </div>
            </form>
        </div>
    </body>
</html>