<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
    <head>
        <title><{$Think.lang.dept_tpl_show_breadcrumb_update}>--[ <{$dept_info.name}> ]</title>
        <!--引入公共文件bootstrap-->
        <include file="Public:bootstrap" />    
    </head>
    <body>
        <ol class="breadcrumb" style="background-color: #E8F2FC;">
            <li><a class="text-right"style="text-decoration: none" href="#"><{$Think.lang.dept_tpl_show_breadcrumb_manager}></a></li>
            <li><a class="text-right"style="text-decoration: none" href="#"><{$Think.lang.dept_tpl_show_breadcrumb_update}>--[ <{$dept_info.name}> ]</a></li>
            <li>
                <a class="text-right"style="text-decoration: none" href="javascript:;" onclick="window.location.reload(true);">【刷新本页】</a>
            </li>
            <li>
                <a style="text-decoration: none;" href="<{:getUrl('Dept/index')}>" target="right">【返回】</a>
            </li>
        </ol>
        <div>
            <form class="form-horizontal" role="form"action="<{:getUrl('Dept/update')}>" method="post">
                <div class="form-group">
                    <label class="col-sm-2 control-label">是否启用部门</label>
                    <div class="col-sm-3">
                        <label class="btn btn-success">
                            <input type="radio" name="status" value="1" <eq name="dept_info.status" value="1">checked</eq> />
                            启用
                        </label>
                        <neq name="dept_info.pid" value="0">
                            <label class="btn btn-danger">
                            <input type="radio" name="status" value="0" <eq name="dept_info.status" value="0">checked</eq> />
                            停用
                            </label>
                        </neq>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">部门名称</label>
                    <div class="col-sm-3">
                        <input class="form-control" type="text" name="name" value="<{$dept_info.name}>"  placeholder="请输入部门名称"/>
                        <input type="hidden" name="id" value="<{$dept_info.id}>"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">部门描述</label>
                    <div class="col-sm-3">
                        <input class="form-control" type="text" name="title" value="<{$dept_info.title}>" placeholder="请输入部门描述"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">部门备注</label>
                    <div class="col-sm-3">
                        <input class="form-control" type="text" name="remark" value="<{$dept_info.name}>" placeholder="请输入部门备注"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">上级部门</label>
                    <div class="col-sm-3">
                        <select class="form-control" name="pid">
                            <eq name="dept_info.pid" value="0">
                               <option value="0" selected="selected" >
                                           顶级部门
                               </option>
                               <else/>
                                <volist name='dept_list' id='vo' key='index'>
                                    <eq name="dept_info.pid" value="$vo.id">
                                        <option value="<{$vo.id}>" selected="selected">
                                            <{$vo.name}>
                                        </option>
                                    </eq>    
                                </volist>
                            </eq>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input class="btn btn-primary" type="submit" value="更新部门">
                    </div>
                </div>
            </form>
        </div>
    </body>
</html>